

<head>
    <meta charset="UTF-8">
    <title>Title</title>
</head>
<body>

<div> Add a book </div>
<div>
    <form method="POST" action="/">
        <label for="title">Title:</label>
        <input type="text" placeholder="Title" name="title"> <br> <br>
        <label for="title">Author:</label>
        <input type="text" placeholder="Author" name="author"> <br> <br>
        <label for="title">Quantity:</label>
        <input type="number" placeholder="Quantity" name="quantity"> <br> <br>
        <button type="submit">Save</button>
    </form>
</div>

<div style="padding-top: 5%"> list of book</div>
<div>
    <% if (books) {%>
        <% for(var i = 0; i<books.length; i++) {%>
            <div class="col-xs-12 col-sm-6 col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title" style="font-weight: bold"><%= books[i].title %></h4>
                    </div>
                </div>
            </div>
        <% }%>
    <% }%>
</div>




</body>
